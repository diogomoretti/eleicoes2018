.header
  padding 3em 0

  &-title
    margin 0
    font-size 4rem
    letter-spacing -.05em
    background-image linear-gradient(to bottom, $brazil-green 0%, $brazil-green 40%, $brazil-yellow 40%, $brazil-yellow 80%, #fff 80%, #fff 100%)
    overflow hidden
    border-radius 2px

    span
      background #fff
      padding .3em 0
      box-shadow 10px 0 15px 20px #fff

  &-description
    margin .5em 0 0 0
    padding-left .4em
    font-size 1rem
    color #aaa
    letter-spacing .5em
    text-transform uppercase

.footer
  border-top 1px solid #eee
  padding-top 1em

  &-description
    font-size 1.2rem
    line-height 1.6
    color #aaa

    a
      color #777
      border-bottom 1px solid @color
      text-decoration none
      transition all .5s ease

      &:hover
        color #000
        border-color @color
