doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')

    title Eleições 2018

    link(rel='apple-touch-icon' sizes='180x180' href='assets/favicons/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='assets/favicons/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='assets/favicons/favicon-16x16.png')
    link(rel='manifest', href='assets/favicons/site.webmanifest')
    link(rel='mask-icon' href='assets/favicons/safari-pinned-tab.svg' color='#5bbad5')
    link(rel='shortcut icon' href='assets/favicons/favicon.ico')
    meta(name='msapplication-TileColor' content='#ffffff')
    meta(name='msapplication-config' content='assets/favicons/browserconfig.xml')
    meta(name='theme-color' content='#ffffff')

    link(rel='stylesheet' href='assets/css/main.css')
  body
    div.site-wrapper
      header.header
        h1.header-title
          span Eleições 2018
        p.header-description brasil
      include partial/brasil.pug
      main.main.listing
        div.tabs
          ul.tab-list
            li.tab-list__item.active(data-tab='tab1') #[span.full Presidente] #[span.abbr Presidente]
            li.tab-list__item(data-tab='tab2') #[span.full Governador] #[span.abbr Governo]
            li.tab-list__item(data-tab='tab3') #[span.full Senador] #[span.abbr Senado]
            li.tab-list__item(data-tab='tab4') #[span.full Federal] #[span.abbr Federal]
            li.tab-list__item(data-tab='tab5') #[span.full Estadual] #[span.abbr Estadual]

          div.tab-content
            div.tab-content__item(data-tab='tab1' data-candidate='presidente')
            div.tab-content__item(data-tab='tab2' data-candidate='governador')
            div.tab-content__item(data-tab='tab3' data-candidate='senador')
            div.tab-content__item(data-tab='tab4' data-candidate='federal')
            div.tab-content__item(data-tab='tab5' data-candidate='estadual')
      footer.footer
        p.footer-description As informações contidas nessa página foram retiradas do #[a(href="http://divulgacandcontas.tse.jus.br" target="_blank") Site Oficial do TSE].
        p.footer-description Este projeto tem o #[a(href="https://github.com/diogomoretti/eleicoes2018" target="_blank") código aberto] sob a #[a(href="https://pt.wikipedia.org/wiki/Licen%C3%A7a_MIT" target="_blank") Licença MIT].

    script(src='assets/js/main.js')
